pipeline{
    
    agent any
    tools {
        maven "maven-3.8.2"
    }
    parameters{
        string(name:'OPERATION', defaultValue:'package', description: 'Operaci贸n maven a realizar')  
        string(name:'URL', defaultValue:'https://github.com/jesuscle/junitmavenexample', description: 'Url por repositorio')      
    }
    stages{
        stage("Verificaci贸n"){
            steps {
                bat "java -version"
                bat "mvn -version"
                echo "Operaci贸n a ejecutar: ${params.OPERATION}"
            }
        }

        stage ("Descarga del c贸digo y build") {
            steps {
                git "https://github.com/jesuscle/junitmavenexample"
                bat "mvn clean ${params.OPERATION}"
            }
        }
    }
    
    post{
        success{
            junit 'target/surefire-reports/TEST-*.xml'
        }
    }
}
